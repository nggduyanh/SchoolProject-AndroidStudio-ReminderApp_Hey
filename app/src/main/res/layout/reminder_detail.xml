<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/headerBlur">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:paddingTop="50dp">

            <androidx.cardview.widget.CardView
                style="@style/MyCardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/iconDate"
                                android:layout_width="wrap_content"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/calendar_icon"/>

                            <TextView
                                android:id="@+id/headerDate"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_marginLeft="15dp"
                                android:text="Ngày"
                                app:layout_constraintBottom_toTopOf="@+id/Date"
                                android:gravity="center_vertical"
                                app:layout_constraintLeft_toRightOf="@id/iconDate"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed" />

                            <TextView
                                android:id="@+id/Date"
                                android:visibility="gone"
                                android:textColor="@color/blue"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:text="Ngày"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="@id/headerDate"
                                app:layout_constraintTop_toBottomOf="@id/headerDate" />


                        </androidx.constraintlayout.widget.ConstraintLayout>



                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/dateSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/calendar_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CalendarView
                            android:id="@+id/calendar_choose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/iconTime"
                                android:layout_width="wrap_content"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/clock_icon"/>

                            <TextView
                                android:id="@+id/timeHeader"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_marginLeft="15dp"
                                android:text="Thời gian"
                                app:layout_constraintBottom_toTopOf="@id/Time"
                                android:gravity="center_vertical"
                                app:layout_constraintLeft_toRightOf="@id/iconTime"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed" />

                            <TextView
                                android:id="@+id/Time"
                                android:textColor="@color/blue"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:text=""
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="@id/timeHeader"
                                app:layout_constraintTop_toBottomOf="@id/timeHeader" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/timeSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right" />

                    </androidx.cardview.widget.CardView>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TimePicker
                            android:id="@+id/timePicker"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:timePickerMode="spinner" />

                    </FrameLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/MyCardview"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:contentPaddingLeft="15dp"
                app:contentPaddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:drawableStart="@drawable/hashtag_icon"
                    android:drawablePadding="15dp"
                    android:gravity="center"
                    android:text="Thẻ" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    app:srcCompat="@drawable/next_icon" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/MyCardview"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:contentPaddingLeft="15dp"
                app:contentPaddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:drawableStart="@drawable/location_icon"

                    android:drawablePadding="15dp"
                    android:text="Vị trí" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/MyCardview"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:contentPaddingLeft="15dp"
                app:contentPaddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:drawableStart="@drawable/mail_icon"
                    android:drawablePadding="15dp"

                    android:text="Khi nhắn tin" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/MyCardview"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:contentPaddingLeft="15dp"
                app:contentPaddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:drawableStart="@drawable/icon_flag"
                    android:drawablePadding="15dp"
                    android:text="Gắn cờ" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/MyCardview"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:contentPaddingLeft="15dp"
                app:contentPaddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text="Mức ưu tiên" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:drawableEnd="@drawable/next_icon"
                    android:text="Không có"
                    android:textColor="@color/grey" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/MyCardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPaddingLeft="15dp"
                app:contentPaddingRight="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/addPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:layout_gravity="left|center"
                        android:text="Thêm hình ảnh"
                        android:textColor="@color/blue" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/photoImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/MyCardview"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:contentPaddingLeft="15dp"
                app:contentPaddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text="URL"
                    android:textColor="@color/grey" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/create_header"/>

</androidx.constraintlayout.widget.ConstraintLayout>